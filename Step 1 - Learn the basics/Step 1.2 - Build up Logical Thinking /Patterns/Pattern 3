Solution:-
public class Solution {
    public static void nTriangle(int n) {
        // Write your code here
        int num =0;

        for(int i=0;i<n;i++)
        {
            for(int j=0;j<=i;j++)
            {
                num = j+1;
                System.out.print(num+" ");
            }
            System.out.println();
        }
    }
}
