Solution:-
public class Solution {
    public static void alphaTriangle(int n) {
        // Write your code here
        char ch = 'A';
        ch += n-1;
        for(int i=0;i<n;i++)
        {
            ch ='A';
            ch +=n-1;
            for(int j=0;j<=i;j++)
            {
                System.out.print(ch+" ");
                ch--;
            }
            System.out.println();
        }
    }
}
