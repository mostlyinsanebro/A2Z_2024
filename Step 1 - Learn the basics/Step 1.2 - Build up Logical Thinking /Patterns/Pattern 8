Solution:-
public class Solution {
    public static void nStarTriangle(int n) {
        // Write your code here

        for(int i=0;i<n;i++)
        {
            for(int spaces = 0;spaces <i;spaces++)
            {
                System.out.print(" ");
            }
            
            for(int stars = 0;stars<2*(n-i)-1;stars++)
            {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
