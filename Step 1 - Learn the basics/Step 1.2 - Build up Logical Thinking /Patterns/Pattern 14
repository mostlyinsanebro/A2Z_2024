Solution:-
public class Solution {
    public static void nLetterTriangle(int n) {
        // Write your code here
        char ch = 'A';

        for(int i=0;i<n;i++)
        {
            ch ='A';
            for(int j=0;j<=i;j++)
            {
                System.out.print(ch+" ");
                ch++;
            }
            System.out.println();
        }
    }
}
