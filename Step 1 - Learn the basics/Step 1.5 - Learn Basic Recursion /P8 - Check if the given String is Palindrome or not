Solution:-
public class Solution {
    public static boolean isPalindrome(String str) {
        // Write your code here.
        if(str.length()==0||str.length()==1)
        {
            return true;
        }

        char s = str.charAt(0);
        char e = str.charAt(str.length()-1);

        return s==e&&isPalindrome(str.substring(1,str.length()-1));
        
        
    }
}
